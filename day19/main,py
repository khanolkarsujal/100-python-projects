from turtle import  Turtle, Screen
import random






# def move_forwards():
#     tim.forward(10)
# def move_backwords():
#     tim.backward(10)
# def move_right():
#     tim.right(10)
# def move_left():
#     tim.left(10)
# def clear():
#     tim.clear()
#     tim.reset()



screen = Screen()
# screen.listen()
# screen.onkey(key="w", fun=move_forwards )
# screen.onkey(key="s",fun=move_backwords)
# screen.onkey(key="d",fun=move_right)
# screen.onkey(key="a",fun=move_left)
# screen.onkey(key="c",fun=clear)

screen.setup(width=500,height=400)
user_bet = screen.textinput(title="make your bet",prompt="which turtle will win the race ? Enter a color")

is_race_on = False




colors=["red",'green',"grey","black","blue"]
y_position = [100,50,0,-50,-100]
all_turtle=[]

for turtle_index in range(0,5):
    tim = Turtle(shape="turtle")
    tim.color(colors[turtle_index])
    tim.penup()
    tim.goto(x=-230, y=y_position[turtle_index])
    all_turtle.append(tim)


if user_bet :
    is_race_on = True

while is_race_on:

   
        
    distanceRan = random.randint(0,10)
    
    random_turtle = random.randint(0,4)
    selected_turtle =all_turtle[random_turtle]
    selected_turtle.forward(distanceRan)

    if selected_turtle.xcor() > 230:
        is_race_on= False
        win_color = selected_turtle.pencolor()
        if win_color == user_bet:
            print(f"you won ,{win_color} turtle is winner")
        else:
            print(f"you loss ,{win_color} turtle is winner")
    

 
screen.exitonclick()


